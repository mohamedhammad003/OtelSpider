@model IEnumerable<OtelSpider.Web.ViewModels.HotelParentViewModel>

@{
    ViewBag.Title = "Parent Hotels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hotels</h2>

<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
            @Html.ActionLink("Create New", "CreateParent", null, new { @class = "btn mr-2 mb-2 btn-primary" })
        </div>
    </div>
    <div class="card-body">
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.WebURL)</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebURL)
                    </td>
                    <td>
                        <button type="button" id="btnGetBranches" data-id="@item.ID" class="mb-2 mr-2 btn-transition btn btn-outline-primary"
                                data-toggle="modal" data-target="#branchesModal">Branches</button> |
                        @Html.ActionLink("Add Branch", "NewBranch", new { parentId = item.ID }) |
                        @Html.ActionLink("Edit", "EditParent", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "DeleteParent", new { id = item.ID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade bd-example-modal-lg show" id="branchesModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="form">
        <div class="modal-content">
            <div class="modal-body" id="modalBody">

            </div>
            <div class="modal-footer text-center" id="dvTablesAreaFooter">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnGetBranches").click(function () {
                var id = $("#btnGetBranches").attr("data-id");
                GetHotelBranches(id);
            });
            function GetHotelBranches(id) {
                $.ajax({
                    url: "/Hotel/_HotelBranchs",
                    type: "GET",
                    data: { parentId: id },
                    success: function (result) {
                        $("#modalBody").html(result); 
                    }
                });
            }
        });
    </script>
}
