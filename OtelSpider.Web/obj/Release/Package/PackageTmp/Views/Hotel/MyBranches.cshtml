@model IEnumerable<OtelSpider.Web.ViewModels.HotelViewModel>

@{
    ViewBag.Title = "My Branches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Branches</h2>
<div class="card mb-3">
    <div class="card-body">
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.HotelParent.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.WebURL)</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HotelParent.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebURL)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>