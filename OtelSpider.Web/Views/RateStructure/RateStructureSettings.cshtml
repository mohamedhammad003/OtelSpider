@model OtelSpider.Web.ViewModels.RateStructureSettingVM

@{
    ViewBag.Title = "Rate Structure Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rate Structure Settings</h2>

<div class="main-card mb-3 card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.HotelID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.HotelID, (IEnumerable<SelectListItem>)ViewBag.Hotels, "Select Hotel", new { @class = "custom-select", @id = "ddlHotel" })
                        @Html.ValidationMessageFor(model => model.HotelID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BaseRoomTypeID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BaseRoomTypeID, (IEnumerable<SelectListItem>)ViewBag.RoomTypes, "Select Base Room", new { @class = "custom-select", @id = "ddlHotel" })
                        @Html.ValidationMessageFor(model => model.BaseRoomTypeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OnlinePrecentage, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OnlinePrecentage, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OnlinePrecentage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BaseCurrencyID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BaseCurrencyID, (IEnumerable<SelectListItem>)ViewBag.Currencies, "Select Base Currency", new { @class = "custom-select", @id = "ddlCurrency" })
                        @Html.ValidationMessageFor(model => model.BaseCurrencyID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShownCurrencyID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ShownCurrencyID, (IEnumerable<SelectListItem>)ViewBag.Currencies, "Select Shown Currency", new { @class = "custom-select", @id = "ddlCurrency" })
                        @Html.ValidationMessageFor(model => model.ShownCurrencyID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CurrencyConversionRate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CurrencyConversionRate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CurrencyConversionRate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="mt-1 btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>